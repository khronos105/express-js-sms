<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input name="message" type="text" class="form-control" placeholder="Write your message" autofocus>
            </div>
            <div class="form-group">
                <input name="phone" value="+34642316105" type="tel" class="form-control" placeholder="+34 642 642 642" autocomplete="off">
            </div>
            <button class="btn btn-primary">Send</button>
        </form>
    </div>
    <div class="col-md-8">
        {{#if messages}}
            {{#each messages}}
                <div class="card card-body">
                    <p>{{ body }}</p>
                    <span>{{ to }}</span>
                </div>
            {{/each}}
        {{else}}
            <div>
                No messages yet
            </div>
        {{/if}}
    </div>
</div>